<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- Nguni Shield -->
	<ThingDef ParentName="Medium_Shield">
		<defName>Apparel_NguniShield</defName>
		<thingClass>Shield.ColorableShield</thingClass>
		<label>nguni shield</label>
		<description>A lightweight shield made of leather and wood, made famous by the Zulu. Though fairly thin, it can block simple projectiles and is useful in close-quarters-combat.</description>
		<graphicData>
		  <texPath>Nguni_Shield</texPath>
		  <graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<stuffCategories>
			<li>Leathery</li>
		</stuffCategories>
		<techLevel>Neolithic</techLevel>			
		<costStuffCount>60</costStuffCount>
		<costList>
		  <WoodLog>15</WoodLog>
		</costList>
		<recipeMaker>
			<recipeUsers>
				<li>CraftingSpot</li>
			</recipeUsers>
		</recipeMaker>
		<statBases>
		  <WorkToMake>4500</WorkToMake>
		  <Mass>4</Mass>	
		  <MaxHitPoints>125</MaxHitPoints>
		  <Flammability>1.0</Flammability>
		  <DeteriorationRate>1</DeteriorationRate>
		  <ArmorRating_Blunt>0.13</ArmorRating_Blunt>
		  <ArmorRating_Sharp>0.10</ArmorRating_Sharp>
		</statBases>
		<useHitPoints>True</useHitPoints>
		<smeltable>True</smeltable>
	</ThingDef>

    <!-- Wicker Shield -->	
	<ThingDef ParentName="Large_Shield">
		<defName>Apparel_WickerShield</defName>
		<thingClass>Shield.ColorableShield</thingClass>
		<label>wicker shield</label>
		<description>A lightweight shield made of wicker, once used by infantry of the ancient Persian empire. While effective against arrows and other projectiles, it is not sturdy enough to stop the thrust of a spear or sword.</description>
		<graphicData>
		  <texPath>Wicker_Shield</texPath>
		  <graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<costStuffCount>60</costStuffCount>
		<techLevel>Neolithic</techLevel>	
		<stuffCategories>
		  <li>Woody</li>
		</stuffCategories>
		<recipeMaker>
			<recipeUsers>
				<li>CraftingSpot</li>
			</recipeUsers>
		</recipeMaker>
		<statBases>
		  <WorkToMake>6000</WorkToMake>
		  <Mass>5.5</Mass>	
		  <MaxHitPoints>160</MaxHitPoints>
		  <Flammability>1.0</Flammability>
		  <DeteriorationRate>1</DeteriorationRate>
		  <ArmorRating_Blunt>0.17</ArmorRating_Blunt>
		  <ArmorRating_Sharp>0.15</ArmorRating_Sharp>
		</statBases>
		<useHitPoints>True</useHitPoints>
		<smeltable>True</smeltable>
	</ThingDef>

