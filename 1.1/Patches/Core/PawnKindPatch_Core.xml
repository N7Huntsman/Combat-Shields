<?xml version="1.0" encoding="utf-8" ?>
<Patch>
<!-- Allow some pawns to spawn with shields -->

	<!-- Tribal -->

   <Operation Class="PatchOperationAdd">
   <xpath>/Defs/PawnKindDef[defName="Tribal_Warrior"]</xpath>
   <value>
	<apparelTags>
		<li>Shield_Neolithic</li>
	</apparelTags>		
   </value>
   </Operation>

   <Operation Class="PatchOperationAdd">
   <xpath>/Defs/PawnKindDef[defName="Tribal_Berserker"]</xpath>
   <value>
	<apparelTags>
		<li>Shield_Neolithic</li>
	</apparelTags>		
   </value>
   </Operation>

	<Operation Class="PatchOperationConditional">
	<xpath>/Defs/PawnKindDef[@Name="TribalChiefBase"]/apparelTags</xpath>
	<nomatch Class="PatchOperationAdd">
	<xpath>/Defs/PawnKindDef[@Name="TribalChiefBase"]</xpath>
		<value>
			<apparelTags>
				<li>Shield_Classical</li>   
			</apparelTags>	
		</value>
	</nomatch>
	<match Class="PatchOperationAdd">
	<xpath>/Defs/PawnKindDef[@Name="TribalChiefBase"]/apparelTags</xpath>
		<value>
			<li>Shield_Classical</li>  
		</value>
	</match>
	</Operation>

   
</Patch>   